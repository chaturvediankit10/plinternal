<div class="container">
  <!-- searching form -->
      <div class="">
        <br/>
          <%= form_tag dashboard_index_path do %>
            <div class="row">
              <div class="col-md-3">
                <div class="form-group">
                  <label>Loan Type</label>
                  <% @rate_type_list =[["Fixed"], ["ARM"], ["Floating"], ["Variable"]]%>
                  <%= select_tag 'rate_type', options_for_select(@rate_type_list, @rate_type), :class=> "form-control" %>
                </div>
                <p>Base Rate = <%= @base_rate %></p>
              </div>

              <div class="col-md-3">
                <div class="form-group">
                  <label>Interest</label>
                   <% @interest_list =[["3.250"],["3.375"],["3.625"],["3.750"],["3.875"],["4.000"],["4.125"],["4.250"],["4.375"],["4.500"],["4.625"],["4.750"],["4.875"],["5.000"],["5.125"],["5.250"],["5.375"],["5.500"],["5.625"],["5.750"],["5.875"]]%>
                  <%= select_tag 'interest', options_for_select(@interest_list, @interest), :class=> "form-control" %>
                  <%#= text_field_tag :interest,@interest, :class=> "form-control" %>
                </div>
              </div>

              <div class="col-md-3">
                <div class="form-group">
                  <label>Term</label>
                  <div class="input-group">
                    <% @term_list =[["ARM",0], ["10 yrs",10], ["15 yrs"], ["20 yrs",20], ["25 yrs",25], ["30 yrs",30]]%>
                    <%= select_tag 'term', options_for_select(@term_list, @term), :class=> "form-control" %>
                  </div>
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-group">
                  <label>Lock Period</label>
                  <div class="input-group">
                    <% @days_list =[["15 days"], ["30 days",30], ["45 days",45], ["60 days",60]]%>
                    <%= select_tag 'lock_period', options_for_select(@days_list, @lock_period), :class=> "form-control" %>
                  </div>
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-group">
                  <label>Lock Period</label>
                  <div class="input-group">
                    <% @days_list =[["Freddie Fixed Rate"], ["Conforming Fixed Rate"], ["45 days"], ["60 days"]]%>
                    <%= select_tag 'lock_period', options_for_select(@days_list, @lock_period), :class=> "form-control" %>
                  </div>
                </div>
              </div>

              <div class="col-md-3">
                <div class="form-group">
                  <div>
                    <label></label>
                  </div>
                  <%= submit_tag "Search", :class => "btn btn-info" %>
                </div>
              </div>

            </div>
          <% end %>
      </div>
      <!-- end searching form -->

  <div class="row col-md-6 col-md-offset-2 custyle">
  <table class="table table-striped custab">
  <thead>
  <h2>Banks</h2>
  <tr>
    <th>No.</th>
    <th>Name</th>
    <th>Phone</th>
    <th class="text-center">Action</th>
  </tr>
  </thead>
    <% if @banks.present? %>
      <% @banks.each_with_index do |bank, index|%>
        <tr>
          <td><%= index +1 %></td>
          <td><%= bank.name%></td>
          <td><%= bank.phone%></td>
          <td class="text-center"><a class='btn btn-info btn-xs' href="<%=import_files_path%>"><span class="glyphicon glyphicon-edit"></span> View</a></td>
        </tr>
      <%end%>
    </tbody>
  </table>
  </div>
</div>
<style type="text/css">
  #search-form{
    display: -webkit-inline-box;
  }
</style>