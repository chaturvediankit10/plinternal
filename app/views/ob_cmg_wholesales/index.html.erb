<div class="container">
  <div class="row col-md-6 col-md-offset-2 custyle">
  <table class="table table-striped custab">
  <thead>
  <h2>Sheets</h2>
  <tr>
    <th>No.</th>
    <th>Name</th>
    <th class="text-center">Action</th>
  </tr>
  </thead>
    <% if @bank %>
      <% @bank.sheets.each_with_index do |sheet, index|%>
        <tr>
          <td><%= index +1 %></td>
          <td><%= sheet.name %></td>
          <td class="text-center"><a class='btn btn-info btn-xs' href=<%="/ob_cmg_wholesales/" + sheet.id.to_s + "/" + (sheet.name.downcase.include?(" ") ? sheet.name.downcase.gsub("&", "").split.join(" ").tr(" ", "_") : sheet.name.downcase) %>><span class="glyphicon glyphicon-edit"></span> View</a></td>
        </tr>
      <%end%>
    <% end %>
  </table>
  </div>
</div>